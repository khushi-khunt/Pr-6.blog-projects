<%- include('Header') %>
<style>
    /* General Card Styling */
    .card {
        border-radius: 1rem;
        border: none;
        overflow: hidden;
        background-color: #f1f3f5; /* Light background for card */
    }

    /* Blog Item Styling */
    .blog-item {
        background-color: #ffffff;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        padding: 1.5rem;
        border-radius: 0.75rem;
    }

    .blog-item:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
    }

    /* Image Styling */
    .img-fluid {
        max-width: 100%;
        height: auto;
        transition: transform 0.3s ease;
        border-radius: 0.75rem;
    }

    .blog-item:hover .img-fluid {
        transform: scale(1.1);
    }

    /* Button Styling */
    .btn-primary {
        background-color: #007bff; /* Bootstrap primary color */
        border-color: #007bff;
        transition: background-color 0.3s ease, transform 0.2s ease;
        border-radius: 0.5rem;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
        transform: translateY(-2px);
    }

    .btn-warning {
        background-color: #f39c12; /* Updated to a brighter orange */
        border-color: #f39c12;
        transition: background-color 0.3s ease, transform 0.2s ease;
        border-radius: 0.5rem;
    }

    .btn-warning:hover {
        background-color: #e67e22; /* Slightly darker orange */
        border-color: #e67e22;
        transform: translateY(-2px);
    }

    .btn-danger {
        background-color: #e74c3c; /* Updated to a more vibrant red */
        border-color: #e74c3c;
        transition: background-color 0.3s ease, transform 0.2s ease;
        border-radius: 0.5rem;
    }

    .btn-danger:hover {
        background-color: #c0392b; /* Slightly darker red */
        border-color: #c0392b;
        transform: translateY(-2px);
    }

    /* Typography and Spacing */
    .font-weight-bold {
        font-weight: 700;
    }

    .text-muted {
        color: #7f8c8d;
    }

    .ps-3 {
        padding-left: 1.5rem;
    }

    .ms-auto {
        margin-left: auto;
    }

    /* Card Shadow and Border Styling */
    .shadow-lg {
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
    }

    .border-0 {
        border: none;
    }

    .rounded-lg {
        border-radius: 1rem;
    }

    .hover-scale {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .hover-scale:hover {
        transform: scale(1.02);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
    }
</style>

<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Show Blogs</h4>
                <button class="btn btn-primary ms-auto">
                    <a class="text-light text-decoration-none" href="/add">Add New Blog</a>
                </button>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card shadow-lg border-0 rounded-lg">
                    <div class="card-body">
                        <h4 class="card-title mb-4">Recent Posts</h4>
                        <div class="row g-3"> <!-- Grid with spacing -->
                            <% blog.map((val) => { %>
                                <div class="col-md-6 col-lg-4"> <!-- Responsive column width -->
                                    <div class="blog-item d-flex flex-wrap border border-2 rounded-lg shadow-sm hover-scale">
                                        <div class="p-2 w-100 w-md-30">
                                            <img src="<%= val.image %>" alt="Blog Image"
                                                 class="img-fluid rounded-lg shadow-sm" style="width: 100%; height: auto;" />
                                        </div>
                                        <div class="comment-text w-100 w-md-70 ps-3">
                                            <h5 class="font-weight-bold mb-2">
                                                <%= val.title %>
                                            </h5>
                                            <p class="text-muted mb-3">
                                                <%= val.description %>
                                            </p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <button type="button" class="btn btn-warning btn-sm">
                                                    <a class="text-light text-decoration-none" href="/editBlog?editId=<%= val.id %>">Edit</a>
                                                </button>
                                                <button type="button" class="btn btn-danger btn-sm">
                                                    <a class="text-light text-decoration-none" href="/deleteBlog?deletId=<%= val.id %>">Delete</a>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('Footer') %>
